<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ImageToText">

    <ImageView
        android:id="@+id/image_view_Img2Txt"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"/>

    <Button
        android:id="@+id/button_process"
        android:layout_below="@+id/image_view_Img2Txt"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PROCESS"/>
    
    <TextView
        android:id="@+id/textView_result_Img2Txt"
        android:text="NO TEXT"
        android:gravity="center_horizontal"
        android:textSize="12sp"
        android:layout_below="@+id/button_process"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>